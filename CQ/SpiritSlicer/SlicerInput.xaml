        <TextBox Name="rWidth" HorizontalAlignment="Left" Margin="344,31,0,0" TextWrapping="Wrap" Text="0" Width="78" Height="24" VerticalAlignment="Top"/>
        <TextBox Name="rHeight" HorizontalAlignment="Left" Margin="430,31,0,0" TextWrapping="Wrap" Text="0" Width="78" RenderTransformOrigin="0.41,0.125" Height="24" VerticalAlignment="Top"/>
        <Label Content="X" HorizontalAlignment="Left" Margin="156,3,0,30" RenderTransformOrigin="0.353,2.636"/>
        <Label Content="Y" HorizontalAlignment="Left" Margin="262,0,0,39"/>
        <Label Content="Width" HorizontalAlignment="Left" Margin="344,0,0,0" Height="26" VerticalAlignment="Top"/>
        <Label Content="Height" HorizontalAlignment="Left" Margin="430,0,0,0" VerticalAlignment="Top"/>
        <Button Name="ViewRectangle" Content="ViewRectangle" HorizontalAlignment="Left" Margin="519,16,0,0" Width="83" RenderTransformOrigin="0.241,-0.15" Height="38" VerticalAlignment="Top" />

    </Grid>
</UserControl>
