        <TextBox Name="sliceName" HorizontalAlignment="Right" Height="23" Margin="0,31,482,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
